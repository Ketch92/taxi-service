<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>taxi-service</servlet-name>
        <servlet-class>core.controller.IndexController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>taxi-service</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriver</servlet-name>
        <servlet-class>core.controller.driver.AddDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>core.controller.driver.DeleteDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>core.controller.driver.GetAllDriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllManufacturers</servlet-name>
        <servlet-class>core.controller.manufacturer.GetAllManufacturersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getAllManufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addManufacturer</servlet-name>
        <servlet-class>core.controller.manufacturer.AddManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>core.controller.manufacturer.DeleteManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCar</servlet-name>
        <servlet-class>core.controller.car.AddCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllCars</servlet-name>
        <servlet-class>core.controller.car.GetAllCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getAllCars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>core.controller.car.AddDriverToCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showCarDrivers</servlet-name>
        <servlet-class>core.controller.car.GetDriversOfCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showCarDrivers</servlet-name>
        <url-pattern>/cars/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getMyCurrentCars</servlet-name>
        <servlet-class>core.controller.car.GetMyCurrentCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getMyCurrentCars</servlet-name>
        <url-pattern>/drivers/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>core.controller.car.DeleteCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>core.controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>core.web.filters.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
